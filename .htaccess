# -----------------------------------------
# üîÅ Force HTTPS and non-www version
# -----------------------------------------
RewriteEngine On

# Redirect www to non-www
RewriteCond %{HTTP_HOST} ^www\.rangkaempat\.com [NC]
RewriteRule ^(.*)$ https://rangkaempat.com/$1 [L,R=301]

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://rangkaempat.com/$1 [L,R=301]

# -----------------------------------------
# ‚öôÔ∏è React SPA fallback routing
# -----------------------------------------
RewriteBase /

# Don‚Äôt rewrite index.html
RewriteRule ^index\.html$ - [L]

# If not a real file or folder, serve index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]
